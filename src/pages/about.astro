---
import DefaultLayout from '@/layouts/DefaultLayout.astro';
import CreamContainer from '@/components/elements/cream-container';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { AboutHero } from '@/components/sections/about-hero';
import { DashedLine } from '@/components/elements/dashed-line';
import { Investors } from '@/components/sections/investors';
import AboutSection from '@/components/sections/about-section';
---
<DefaultLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <CreamContainer>
    <div class="py-28 lg:py-32 lg:pt-44">
      <AboutHero />
      <AboutSection />
      <div class="pt-28 lg:pt-32">
        <DashedLine className="container max-w-5xl scale-x-115" />
        <Investors />
      </div>
    </div>
  </CreamContainer>
</DefaultLayout>
