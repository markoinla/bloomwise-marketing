---
import DefaultLayout from '@/layouts/DefaultLayout.astro';

import { Hero } from '@/components/sections/hero';

import { Features } from '@/components/sections/features';
import { ResourceAllocation } from '@/components/sections/resource-allocation';
import { Testimonials } from '@/components/sections/testimonials';
import { Pricing1 } from '@/components/sections/pricing1';
import { FAQ } from '@/components/sections/faq';
import { Logos } from '@/components/sections/logos';

import CreamContainer from '@/components/elements/cream-container';

import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<DefaultLayout title={SITE_TITLE} description={SITE_DESCRIPTION} >
  <CreamContainer className="via-muted to-muted/80">
    <Hero />
    <Logos client:only="react"/> 
    <Features />
    <ResourceAllocation />
  </CreamContainer>
  <Testimonials client:load/>
  <CreamContainer variant="bottom">
    <Pricing1 client:load/>
    <FAQ client:load/>
  </CreamContainer>
</DefaultLayout>